{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "types": ["node", "playwright"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}